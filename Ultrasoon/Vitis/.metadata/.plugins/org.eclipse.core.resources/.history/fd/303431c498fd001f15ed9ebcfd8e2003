
#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "AXI_Ultrasoon.h"
#include "sleep.h"

#define AXI_Ultrasoon_0 0x43C10000
#define AXI_Ultrasoon_1 0x43C1FFFF

int main()
{
    init_platform();
    int distance_R = 0;
    int distance_L = 0;
    print("Ultrasoon Test\n\r");

    for(;;){
    	sleep_A9(1);
        //distance_R = HC_SR04_mReadReg(HC_SR04_R,0);
        distance_R = AXI_ULTRASOON_mReadReg ( AXI_Ultrasoon_0, 0 );
       // distance_L = HC_SR04_mReadReg(HC_SR04_L,0);
        distance_L = AXI_ULTRASOON_mReadReg ( AXI_Ultrasoon_1, 0 );
        xil_printf("Distance 1 = %d cm\n\r",distance_R);
        xil_printf("Distance 2 = %d cm\n\r",distance_L);
    	sleep_A9(1);
    }


    cleanup_platform();
    return 0;
}
