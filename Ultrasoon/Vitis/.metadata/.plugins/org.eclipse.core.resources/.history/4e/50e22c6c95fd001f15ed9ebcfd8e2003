
#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include "AXI_Ultrasoon.h"

#define AXI_Ultrasoon_0 0x43c00000
#define AXI_Ultrasoon_1 0x43c10000

int main()
{
    init_platform();
    xil_printf("Ultrasoon sensor gestart\n\r");

    int distance_R = 0;
    int distance_L = 0;

    while(1)
    {
        distance_R = AXI_Ultrasoon_mReadReg(AXI_Ultrasoon_0,0);
        distance_L = AXI_Ultrasoon_mReadReg(AXI_Ultrasoon_1,0);
        xil_printf("Distance\n");
        xil_printf("R : %i L: %i\n\r", distance_R, distance_L);
        sleep_A9(1);
    }

    return 0;
}
